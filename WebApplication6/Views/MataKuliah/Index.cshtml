@model System.Data.DataTable
@{
    ViewBag.Title = "Index";
}

<table class="table table-bordered table-striped">
    <tr>
        <th>Kode Mata Kuliah</th>
        <th>Nama Mata Kuliah</th>
        <th>SKS</th>
        <th></th>
    </tr>
    @for (int i = 0; i < Model.Rows.Count; i++)
    {
        <tr>
            <td>@Model.Rows[i][0]</td>
            <td>@Model.Rows[i][1]</td>
            <td>@Model.Rows[i][2]</td>
            <td>
                <a href="@Url.Action("Edit","Matakuliah", new { @id=@Model.Rows[i][0]})">Edit</a>
                <a href="@Url.Action("Delete","Matakuliah", new { @id=@Model.Rows[i][0]})">Delete</a>
            </td>
        </tr>

    }
</table>

<a href="@Url.Action("Create","Matakuliah")">Add Mata Kuliah</a>
<a href="javascript:void(0)" onclick="searchMk()">Search Mata Kuliah</a>
<script>
            function searchMk() {
                window.location.href = "@Url.Action("IndexSearch","Matakuliah")" + "?limit=5" ;
          }
</script>

