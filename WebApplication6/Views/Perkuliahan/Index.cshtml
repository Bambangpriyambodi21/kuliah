@model System.Data.DataTable
@{
    ViewBag.Title = "Index";
}

<table class="table table-bordered table-striped">
    <tr>
        <th>NIM</th>
        <th>Kode Mata Kuliah</th>
        <th>NIP</th>
        <th>Nilai</th>
        <th></th>
    </tr>
    @for (int i = 0; i < Model.Rows.Count; i++)
    {
        <tr>
            <td>@Model.Rows[i][0]</td>
            <td>@Model.Rows[i][1]</td>
            <td>@Model.Rows[i][2]</td>
            <td>@Model.Rows[i][3]</td>
            <td>
                <a href="@Url.Action("Edit","Perkuliahan", new { @id=@Model.Rows[i][0]})">Edit</a>
                <a href="@Url.Action("Delete","Perkuliahan", new { @id=@Model.Rows[i][0]})">Delete</a>
            </td>
        </tr>

    }
</table>

<a href="@Url.Action("Create","Perkuliahan")">Add Perkuliahan</a>
<a href="javascript:void(0)" onclick="searchPerkuliahan()">Search Perkuliahan</a>
<script>
    function searchPerkuliahan() {
                window.location.href = "@Url.Action("IndexSearch", "Perkuliahan")" + "?limit=5" ;
          }
</script>

