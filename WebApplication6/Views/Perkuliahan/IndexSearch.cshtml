@model System.Data.DataTable
@{
    ViewBag.Title = "IndexSearch";
}

<table class="table table-bordered table-striped">
    <tr>
        <h1>Search NIM</h1>
    </tr>
    <tr>
        <form id="myForm" action="@Url.Action("IndexSearch","Perkuliahan")" method="get" onsubmit="submitForm(event)">
            <input type="text" id="perkuliahan" name="myText">
            <input type="hidden" id="limit" name="limit" value="5">
            <a href="javascript:void(0)" onclick="searchPerkuliahan()">Search NIM</a>
        </form>

        <script>
            function searchPerkuliahan() {
                var inputValue = document.getElementById("perkuliahan").value;
                var limitValue = document.getElementById("limit").value;
                window.location.href = "@Url.Action("IndexSearch", "Perkuliahan")" + "?limit=" + limitValue + "&id=" + inputValue;
          }
        </script>
    </tr>
    <tr>
        <th>NIM</th>
        <th>Kode Mata Kuliah</th>
        <th>NIP</th>
        <th>Nilai</th>
        <th></th>
    </tr>
    @for (int i = 0; i < Model.Rows.Count; i++)
    {
        <tr>
            <td>@Model.Rows[i][0]</td>
            <td>@Model.Rows[i][1]</td>
            <td>@Model.Rows[i][2]</td>
            <td>@Model.Rows[i][3]</td>
            <td>
                <a href="@Url.Action("Edit","Perkuliahan", new { @id=@Model.Rows[i][0]})">Edit</a>
                <a href="@Url.Action("Delete","Perkuliahan", new { @id=@Model.Rows[i][0]})">Delete</a>
            </td>
        </tr>

    }
</table>

